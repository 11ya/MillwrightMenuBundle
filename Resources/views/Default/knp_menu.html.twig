{% extends 'knp_menu.html.twig' %}

{% block label %}
{{ item.label|trans(item.getExtra('translateParameters', {}), item.getExtra('translateDomain', 'messages')) }}
{% endblock label %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        {% for element in item %}
        <li>
            {%- if element.uri is not empty and (not element.current) %}
            {{ block('linkElement') }}
            <span class="divider">/</span>
            {%- else %}
            {{ block('spanElement') }}
            {%- endif %}
        </li>
        {% endfor %}
    </ul>
{% endblock breadcrumb %}

{% block link %}
    <a href="{{ item.uri }}">{{ item.name }}</a>
{% endblock link %}
